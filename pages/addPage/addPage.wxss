/* pages/addPage.wxss */
.add-page-container {

  height: 100vh;
  box-sizing: border-box;
  background-color: #f3f6fa;
  box-sizing: border-box;
  padding: 32rpx 20rpx 40rpx;
  overflow: auto;
}

.date-picker {
  padding: 0 20rpx 0 48rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  height: 100rpx;
  background-color: #fff;
}

.date-picker-text {
  font-size: 32rpx;
}

.date-text {
  /* padding-left: 10rpx; */
}

.date-icon {
  width: 56rpx;
  height: 56rpx;
}

.date-image {
  width: 100%;
  height: 100%;
}

.input-section {
  margin-top: 32rpx;
  padding: 29rpx 48rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.input-text {
  width: 109rpx;

}


.input-context {
  width: 100%;
  /* padding-left: 4rpx; */
}

.textarea-section {
  box-sizing: border-box;
  margin-top: 32rpx;
  background-color: #fff;
  min-height: 100rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 29rpx 48rpx;
  font-size: 32rpx;
  margin-bottom: 32rpx;
}

.textarea-context {
  width: 100%;
  min-height: 300rpx;
}

.date-title {
  width: 109rpx;
}

.textarea-text {
  width: 109rpx;
  line-height: 42rpx;
}

.btn-container {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  /* position: fixed;
  bottom: 0rpx;
  left: 50%;
  transform: translateX(-50%); 
  background-color: #C7DCEF;
  overflow: hidden; */
}

.btn-cancel {
  flex: 0 0 40%;
  color: rgb(128, 128, 128);
  background-color: #e7ecf0;
}

.btn-submit {
  flex: 0 0 40%;
  color: #fff;
  background-color: #C7DCEF;
}

.input-bgc {
  width: 240rpx;
  height: 240rpx;
}